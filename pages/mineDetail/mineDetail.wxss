/* pages/customer/customer.wxss */
page {
  background-color: #F6F6F6;
}

.customer {
  margin-top: 180rpx;
}
.head{
  height: 196rpx;
  border-bottom: 1rpx solid #E6E6E6;

}
.head-portrait {
  width: 116rpx;
  height: 116rpx;
  border-radius: 50%;
  overflow: hidden;
}


.btn_text {
  margin: 64rpx auto 20rpx;
  width: 686rpx;
  height: 80rpx;
  background: #3E95FD;
  box-shadow: 0px 2rpx 8rpx 0px rgba(23, 95, 155, 0.1);
  border-radius: 45rpx;
  border: 2rpx solid #3E95FD;
  line-height: 80rpx;
  text-align: center;
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC, sans-serif;
  font-weight: 400;
  color: #FFFFFF;
}
.info_content {
  background-color: #fff;
  padding: 0 32rpx;
  box-sizing: border-box;
}

.info_item {
  height: 110rpx;
  border-bottom: 1rpx solid #E6E6E6;
}

.info_item:last-child {
  border-bottom: none;
}

.item_title {
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC, sans-serif;
  font-weight: 400;
  color: #333333;
}

.item_content {
  width: 448rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC, sans-serif;
  font-weight: 400;
  color: #333333;
}

.item_content .picker_no {
  font-family: PingFangSC-Regular, PingFang SC, sans-serif;
  font-size: 32rpx;
  font-weight: 400;
  color: #999999;
}

.picker_value {
  font-family: PingFangSC-Regular, PingFang SC, sans-serif;
  font-size: 32rpx;
  font-weight: 400;
  color: #333333;
}

.item_content image {
  display: block;
  margin-left: 10rpx;
  margin-top: 4rpx;
  width: 26rpx;
  height: 32rpx;
}

.placeholder {
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC, sans-serif;
  font-weight: 400;
  color: #CCCCCC;
  text-align: right;
}

.input_value {
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
  text-align: right;
}

.txt_right{
  text-align: right;
}