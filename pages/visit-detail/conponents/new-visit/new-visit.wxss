/* pages/customer/components/basic-info/basic-info.wxss */
.basic_info {
  height: 100%;
  margin-top: 20rpx;
}

.basic_info .title {
  height: 100rpx;
  font-size: 36rpx;
  font-family: PingFangSC-Medium, PingFang SC, sans-serif;
  font-weight: 500;
  color: #333333;
  line-height: 100rpx;
  padding-left: 32rpx;
  box-sizing: border-box;
}

.info_content {
  background-color: #fff;
  padding: 0 32rpx;
  box-sizing: border-box;
}

.info_item {
  height: 110rpx;
  border-bottom: 1rpx solid #E6E6E6;
}

.info_item:last-child {
  border-bottom: none;
}

.item_title {
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC, sans-serif;
  font-weight: 400;
  color: #333333;
}

.item_content {
  width: 448rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC, sans-serif;
  font-weight: 400;
  color: #333333;
  text-align: right;
}

.item_content .picker_no {
  font-family: PingFangSC-Regular, PingFang SC, sans-serif;
  font-size: 32rpx;
  font-weight: 400;
  color: #999999;
}

.picker_value {
  font-family: PingFangSC-Regular, PingFang SC, sans-serif;
  font-size: 32rpx;
  font-weight: 400;
  color: #333333;
}

.item_content image {
  display: block;
  margin-left: 10rpx;
  margin-top: 4rpx;
  width: 26rpx;
  height: 32rpx;
}

.placeholder {
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC, sans-serif;
  font-weight: 400;
  color: #CCCCCC;
  text-align: right;
}

.input_value {
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
  text-align: right;
  padding-right: 24rpx;
  z-index: 10;
}

.edit {
  z-index: 2;
  width: 24rpx;
  height: 24rpx;
  position: absolute;
  right: 32rpx;
}

.info_item_style {
  border-bottom: 1rpx solid #E6E6E6;
  padding: 34rpx 0;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
}

.my_text {
  width: 440rpx;
  text-align: right;
  min-height: 120rpx;
}

.upload {
  padding: 38rpx 0 48rpx;
  box-sizing: border-box;
}

.img_only {
  width: 148rpx;
  height: 148rpx;
  border-radius: 8rpx;
  margin: 0 26rpx 30rpx 0;
  position: relative;
}
.img_only .bg{
  position: absolute;
  top: 0;
  left: 0;
  width: 148rpx;
  height: 148rpx;
}
.img_only:nth-child(4n) {
  margin-right: 0;
}

.img_list {
  margin-top: 50rpx;
  display: flex;
  flex-wrap: wrap;
}

.upload_img {
  width: 100%;
  height: 100%;
}

.delete {
  position: absolute;
  width: 32rpx;
  height: 32rpx;
  top: -8rpx;
  right: -8rpx;
}

.submit {
  width: 686rpx;
  height: 80rpx;
  background: #3E95FD;
  box-shadow: 0px 2rpx 8rpx 0px rgba(23, 95, 155, 0.1);
  border-radius: 45rpx;
  border: 2rpx solid #3E95FD;
  margin: 64rpx auto;
  text-align: center;
  line-height: 80rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC, sans-serif;
  font-weight: 400;
  color: #FFFFFF;
}
.weui-cell-nopad{
  padding: 0;
}