/* pages/smsCode/smsCode.wxss */

.tip {
  width: 750rpx;
  height: 68rpx;
  line-height: 68rpx;
  background: #F6F6F6;
  font-size: 28rpx;
  text-indent: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #999999;
}

.tip text {
  color: #3E95FD;
}

.code-wrap {
  margin: 0 auto;
  width: 686rpx;
  height: 114rpx;
  border-bottom: 1px solid #E6E6E6;
}

.code-wrap .code-input {
  flex: 1;
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #CCCCCC;
}
.tip-wrap {
  text-align: right;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #CCCCCC;
}
.code-wrap .code-active{
  color: #3E95FD;
}
.btn {
  margin: 64rpx auto;
  width: 686rpx;
  line-height: 80rpx;
  background: #3E95FD;
  box-shadow: 0px 2px 8px 0px rgba(23, 95, 155, 0.1);
  border-radius: 45rpx;
  border: 2rpx solid #3E95FD;
  text-align: center;
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #FFFFFF;
}