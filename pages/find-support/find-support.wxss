/* pages/visit-customer/visit-customer.wxss */
page {
  height: 100vh;
  overflow: hidden;
}

.visit-customer-content {
  padding: 32rpx 0;
  box-sizing: border-box;
}

.search {
  width: 686rpx;
  height: 64rpx;
  background: #F5F5F5;
  border-radius: 32rpx;
  margin: 0 auto 42rpx;
  display: flex;
  align-items: center;
  padding: 0 32rpx;
  box-sizing: border-box;
}

.placeholder {
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC, sans-serif;
  font-weight: 400;
  color: #999999;
  line-height: 24rpx
}

.search .icon {
  width: 32rpx;
}

.weui-input {
  flex: 1;
  margin-left: 24rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #999999;
}

.list {
  height: calc(100vh - 324rpx);
}

.list_item {
  width: 686rpx;
  height: 152rpx;
  background: #FFFFFF;
  box-shadow: 0px 0px 16rpx 0px rgba(86, 86, 86, 0.12);
  border-radius: 8rpx;
  margin: 0 auto 32rpx;
  padding-left: 32rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: center;
  position: relative;
}
.list_item:nth-of-type(1){
  margin-top: 10rpx;
}
.compony_name {
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC, sans-serif;
  font-weight: 500;
  color: #333333;
  line-height: 40rpx;
}

.time {
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC, sans-serif;
  font-weight: 400;
  color: #999999;
  line-height: 24rpx;
  margin-top: 16rpx;
}

.tips {
  position: absolute;
  width: 20rpx;
  height: 20rpx;
  background: #FF674B;
  border-radius: 50%;
  right: 12rpx;
  top: 12rpx;
}
.no_data {
  height: 100%;
  background-color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #999999;
  line-height: 28rpx;
  flex-direction: column;
}

.no_data image {
  width: 336rpx;
  height: 336rpx;
  margin-bottom: 24rpx;
}
.isFinished {
  text-align: center;
  color: #999;
  font-size: 26rpx;
}