/* pages/visit-detail/visit-detail.wxss */
page {
  height: 100vh;
  overflow: hidden;
}

.tabBar {
  width: 750rpx;
  height: 112rpx;
  background: #FFFFFF;
  display: flex;
  align-items: center;
  justify-content: space-around;
  border-bottom: 1rpx solid #e6e6e6;
  margin-bottom: 22rpx;
}

.tab_item {
  text-align: center;
  line-height: 112rpx;
  width: 50%;
  border-bottom: 4rpx solid transparent;
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC, sans-serif;
  font-weight: 400;
  color: #333333;
}

.tab_item_active {
  border-color: #3E95FD;
  color: #3E95FD;
}

.list {
  height: calc(100vh - 300rpx);
}

.list_item {
  width: 686rpx;
  height: 152rpx;
  background: #FFFFFF;
  box-shadow: 0px 0px 16rpx 0px rgba(86, 86, 86, 0.12);
  border-radius: 8rpx;
  margin: 0 auto 32rpx;
  padding-left: 32rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.list_item:nth-of-type(1) {
  margin-top: 10rpx;
}

.compony_name {
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC, sans-serif;
  font-weight: 500;
  color: #333333;
  line-height: 40rpx;
}

.time {
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC, sans-serif;
  font-weight: 400;
  color: #999999;
  line-height: 24rpx;
  margin-top: 16rpx;
}

.no_data {
  height: 100%;
  background-color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #999999;
  line-height: 28rpx;
  flex-direction: column;
}

.no_data image {
  width: 336rpx;
  height: 336rpx;
  margin-bottom: 24rpx;
}

.isFinished {
  text-align: center;
  color: #999;
  font-size: 26rpx;
}