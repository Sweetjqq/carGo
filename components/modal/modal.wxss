/* components/modal/modal.wxss */
.modal_box {
  width: 100vw;
  height: 100vh;
  /* height:calc(100vh+180rpx); */
  position: fixed;
  top: 0;
  left: 0;
  z-index: 100;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal_content {
  width: 560rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 62rpx 24rpx 52rpx;
  box-sizing: border-box;
  overflow: hidden;
}

.head {
  display: flex;
  align-items: center;
  justify-content: center;
}

.head image {
  width: 60rpx;
  height: 60rpx;
  margin-right: 16rpx;
}

.head text {
  font-size: 36rpx;
  font-family: PingFangSC-Medium, PingFang SC, sans-serif;
  font-weight: 500;
  color: #333333;
  line-height: 36rpx;
}

.content {
  text-align: center;
  margin-top: 38rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC, sans-serif;
  font-weight: 400;
  color: #999999;
  line-height: 40rpx;
}

.content .blue {
  color: #3E95FD;
}

.btn {
  width: 400rpx;
  height: 72rpx;
  background: #3E95FD;
  box-shadow: 0px 2rpx 8rpx 0px rgba(23, 95, 155, 0.1);
  border-radius: 48rpx;
  border: 2rpx solid #3E95FD;
  text-align: center;
  line-height: 72rpx;
  margin: 40rpx auto 0;
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC,sans-serif;
  font-weight: 400;
  color: #FFFFFF;

}